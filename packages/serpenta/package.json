{
  "name": "@delft-hyperloop/serpenta",
  "version": "0.2.0",
  "private": false,
  "description": "UI Component Library of Delft Hyperloop's Serpenta GUI Standard.",
  "keywords": [
    "mission-critical",
    "tauri",
    "svelte",
    "sveltekit",
    "tailwindcss",
    "delft",
    "hyperloop",
    "delft hyperloop",
    "serpenta"
  ],
  "license": "MIT",
  "author": "Kiril Panayotov <contact@zakrok.dev> (https://zakrok.dev)",
  "contributors": [
    "Andreas Tsatsanis <code@andreats.com> (https://www.andreats.com/)",
    "Francisco Amaro"
  ],
  "homepage": "https://delft-hyperloop.github.io/serpenta",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@skeletonlabs/skeleton": "^2.10.2",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.4",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "^9.6.0",
    "@types/node": "^22.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "3.4.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vite-plugin-tailwind-purgecss": "0.3.2",
    "vitest": "^2.0.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@iconify/svelte": "^4.0.2",
    "@tauri-apps/api": "^1.6.0",
    "svelte-splitpanes": "^8.0.5",
    "uplot": "^1.6.30"
  }
}
